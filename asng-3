#include<stdio.h>
int main() {
    int choice;
    float c, fh;
    printf("1. convert c to fh");
    printf("2. convert fh to c");
    printf("enter your choice(1 or 2)");
    scanf("%d", &choice);
    
    if(choice = 1) {
        printf("enter temp in c");
        scanf("%f", &c);
        fh = (c * 9/5) + 32;
        printf("temp in fh = %.2f\n", fh);
    }
    
    if (choice = 1) {
        printf("enter temp in fh");
        scanf("%f", &fh);
        c = (fh - 32) * 5/9;
        printf("temp in c = %.2f\n", c);
    }
    return 0;
}